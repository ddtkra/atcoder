import sys


def solve(N: int, v: "List[int]"):
    v.sort()

    while(len(v) != 0):
        if(len(v) == 1):
            x = v.pop(0)
            print(x)
            exit()
        a = v.pop(0)
        b = v.pop(0)
        v.append((a+b)/2)
        v.sort()
    

    return


