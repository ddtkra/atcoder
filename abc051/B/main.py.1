import sys


def solve(K: int, S: int):
    ans = 0
    ## TLE
    # for i in range(K+1):
    #     for j in range(K+1):
    #         for r in range(K+1):
    #             if(i+j+r == S):
    #                 ans += 1

    for i in range(K+1):
        for j in range(K+1):
            r = S - i - j 
            if(0 <= r <= K):
                ans += 1

    print(ans)
    return


